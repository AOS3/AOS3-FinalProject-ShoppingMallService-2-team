<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  텍스트 스타일  -->
    <style name="AppToolbarTitleStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/brown_800</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  뷰페이저 탭 인디케이터 스타일  -->
    <style name="AppTabIndicatorStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@android:color/transparent</item>
        <item name="tabBackground">@drawable/selector_tab_indicator</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingEnd">4dp</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <!--  카테고리 탭 인디케이터 스타일  -->
    <style name="AppTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="android:background">@null</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabBackground">@android:color/transparent</item>
        <item name="tabIndicatorFullWidth">true</item>
    </style>

    <!--  바텀 네비게이션 스타일  -->
    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="android:minHeight">56dp</item>
        <item name="itemActiveIndicatorStyle">@android:color/transparent</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemIconPadding">5dp</item>
        <item name="itemIconSize">20dp</item>
        <item name="itemIconTint">@color/selector_bottom_navigation</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemPaddingBottom">10dp</item>
        <item name="itemPaddingTop">10dp</item>
        <item name="itemTextColor">@color/selector_bottom_navigation</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextStyle</item>
    </style>

    <style name="BottomNavigationTextStyle">
        <item name="android:textSize">10sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <!--  구분선  -->
    <style name="AppDivider" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="dividerColor">@color/gray_200</item>
        <item name="dividerThickness">0.7dp</item>
    </style>
</resources>