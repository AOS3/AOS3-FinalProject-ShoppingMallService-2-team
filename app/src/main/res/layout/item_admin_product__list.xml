<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_admin_product_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="12dp"
        android:background="@color/gray_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/AppRoundedImage.Medium" />

    <ImageView
        android:id="@+id/btn_admin_product_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_admin_product_title" />

    <TextView
        android:id="@+id/tv_admin_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textAppearance="@style/AppTextLabel.S14.Bold"
        app:layout_constraintEnd_toStartOf="@id/btn_admin_product_menu"
        app:layout_constraintStart_toEndOf="@id/iv_admin_product_image"
        app:layout_constraintTop_toTopOf="@id/iv_admin_product_image"
        tools:text="상품상품명상품명상품명상품명상품명상품명상품명상품명상품명상품명명" />

    <TextView
        android:id="@+id/tv_admin_product_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toStartOf="@id/tv_admin_product_title"
        app:layout_constraintTop_toBottomOf="@id/tv_admin_product_title"
        app:layout_goneMarginTop="12dp"
        tools:text="재고 000" />

</androidx.constraintlayout.widget.ConstraintLayout>