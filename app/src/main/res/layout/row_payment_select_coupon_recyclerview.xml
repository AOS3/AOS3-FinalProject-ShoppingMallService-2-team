<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_row_payment_coupon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신규 고객 감사 쿠폰"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

                <Button
                    android:id="@+id/btn_row_row_payment_coupon_delete"
                    android:layout_width="40dp"
                    android:layout_height="21dp"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_gravity="end"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="0dp"
                    android:text="@string/underlined_text_delete"
                    android:textSize="10dp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_row_payment_coupon_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="50000원"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_row_payment_coupon_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50,000원 이상 구매시 사용 가능"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />

            <TextView
                android:id="@+id/tv_row_payment_coupon_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="~2025.01.31"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textStyle="bold"
                />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>