<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_search_result_product_image"
        android:layout_width="154dp"
        android:layout_height="150dp"
        android:background="@color/gray_300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/AppRoundedImage.Medium" />

    <TextView
        android:id="@+id/tv_search_result_product_title"
        style="@style/AppTextLabel.S10.Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@id/iv_search_result_product_image"
        app:layout_constraintStart_toStartOf="@id/iv_search_result_product_image"
        app:layout_constraintTop_toBottomOf="@id/iv_search_result_product_image"
        tools:text="상품명상품명상품명상품명상품명상품명상품명상품명" />

    <ImageView
        android:id="@+id/btn_search_result_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="6dp"
        android:padding="3dp"
        android:src="@drawable/selector_background_like"
        app:layout_constraintBottom_toBottomOf="@id/iv_search_result_product_image"
        app:layout_constraintEnd_toEndOf="@id/iv_search_result_product_image" />
</androidx.constraintlayout.widget.ConstraintLayout>