<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ItemSocialPostViewModel"
            type="com.nemodream.bangkkujaengi.customer.ui.viewmodel.ItemSocialPostViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_social_post_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:src="@drawable/light_image"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundedCornerImage"/>

            <TextView
                android:id="@+id/tv_social_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="게시글 제목"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_social_post_profile_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_social_post_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="작성자 닉네임"
                    android:textSize="14sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_social_post_save_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_heart_24px"
                android:text="999"
                android:textSize="14sp" />
            </LinearLayout>

    </androidx.cardview.widget.CardView>


</layout>